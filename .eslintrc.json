{
  "env": {
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "globals": {
    "window": true,
    "browser": true,
    "node": true,
    "document": true,
    "FileReader": true
  },
  "rules": {
    "react/jsx-props-no-spreading": [
      2,
      {
        "html": "enforce",
        "custom": "ignore",
        "exceptions": []
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "indent": [
      "error",
      4
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-indent-props": [
      "error",
      4
    ],
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "arrow-parens": [
      2,
      "always"
    ],
    "no-underscore-dangle": 0
  }
}